{% extends 'base.twig' %}

{% block content %}
	<h1 class="font-display text-wp-x-large max-w-content mx-auto">
		{{ fn('the_archive_title') }}
	</h1>
	<div class="space-y-wp-gap mt-wp-gap">
		{% for post in posts %}
			{% include 'content.twig' %}
		{% endfor %}

		{% if posts.found_posts > (posts|length) %}
			{% include 'pagination.twig' with {
				pagination: posts.pagination
			} %}
		{% endif %}
	</div>
{% endblock %}
